# ===== PLATFORM CONFIGURATION =====
PLATFORM=render                    # Options: render, heroku, koyeb, railway, panel, local
PORT=3000                         # Server port (for web panel)

# ===== BOT IDENTITY =====
BOT_NAME="KIH DAH"
OWNER_NAME="GuruTech"
BOT_PREFIX="."
OWNER_NUMBER="919876543210"      # Your WhatsApp number with country code

# ===== SESSION CONFIGURATION =====
# Leave empty for QR code, or provide Base64 session from your generator
SESSION_ID=""

# ===== FEATURE TOGGLE =====
# Auto Features
AUTO_REACT_STATUS=true           # Auto-react to status updates
AUTO_VIEW_STATUS=true            # Auto-view status updates
AUTO_TYPING=true                 # Show typing indicator
AUTO_RECORDING=false             # Show recording indicator for voice notes

# Protection Features
ANTI_DELETE_STATUS=true          # Notify when messages are deleted
ANTI_DELETE=true                 # Prevent message deletion
ANTI_LINK=true                   # Block links in groups
ANTI_CALL=true                   # Block/reject calls
ANTI_BUG=true                    # Detect and block exploits
ANTI_SPAM=false                  # Anti-spam protection
URL_AUTO_DETECT=true             # Auto-analyze URLs in messages

# Group Features
WELCOME_MESSAGE=true             # Welcome new members
GOODBYE_MESSAGE=true             # Say goodbye to leaving members
MAX_GROUP_SIZE=100               # Maximum group members
AUTO_PROMOTE_ADMINS=false        # Auto-promote to admin

# ===== MEDIA SETTINGS =====
MAX_DOWNLOAD_SIZE=50             # MB - Maximum download size
ALLOWED_MEDIA_TYPES=image,video,audio,document
MAX_STICKER_SIZE=500             # KB - Maximum sticker size
VIDEO_QUALITY=360                # 144, 240, 360, 480, 720, 1080

# ===== API KEYS (OPTIONAL) =====
# Add your API keys here for enhanced features
OPENAI_API_KEY=""                # For AI features
GOOGLE_API_KEY=""                # For Google services
YT_API_KEY=""                    # YouTube Data API
WEATHER_API_KEY=""               # Weather data
NEWS_API_KEY=""                  # News API

# ===== PERFORMANCE =====
LOG_LEVEL=info                   # debug, info, warn, error
DEBUG=false                      # Enable debug mode
CACHE_ENABLED=true               # Enable caching
CACHE_TTL=300                    # Cache time-to-live in seconds
MAX_CONCURRENT_DOWNLOADS=3       # Simultaneous downloads

# ===== SECURITY =====
ALLOWED_USERS=""                 # Comma-separated numbers, empty for all
BLOCKED_USERS=""                 # Comma-separated numbers to block
ADMIN_NUMBERS=""                 # Additional admin numbers
RESTRICT_COMMANDS=false          # Restrict commands to allowed users only

# ===== DATABASE (IF USING) =====
MONGODB_URI=""                   # MongoDB connection string
REDIS_URL=""                     # Redis URL for caching
DATABASE_ENABLED=false           # Enable database features

# ===== BACKUP =====
AUTO_BACKUP=true                 # Auto-backup session
BACKUP_INTERVAL=86400            # Backup every 24 hours (seconds)
MAX_BACKUPS=7                    # Keep last 7 backups

# ===== WEB PANEL =====
PANEL_ENABLED=true               # Enable web dashboard
PANEL_PASSWORD=""                # Password for panel access
PANEL_THEME=dark                 # dark, light, auto
REALTIME_UPDATES=true            # Real-time updates in panel

# ===== UPTIME MONITOR =====
UPTIME_MONITOR=true              # Enable uptime monitoring
HEALTH_CHECK_INTERVAL=300        # Health check every 5 minutes
AUTO_RESTART=false               # Auto-restart on crash
RESTART_DELAY=10                 # Seconds before restart

# ===== NOTIFICATIONS =====
NOTIFY_OWNER_ON_START=true       # Notify owner when bot starts
NOTIFY_OWNER_ON_ERROR=true       # Notify owner on errors
NOTIFY_OWNER_ON_CRASH=true       # Notify owner on crash
TELEGRAM_BOT_TOKEN=""            # For Telegram notifications
TELEGRAM_CHAT_ID=""              # Telegram chat ID for notifications

# ===== ADVANCED =====
EVAL_ENABLED=false               # Enable eval command (DANGEROUS)
SHELL_ENABLED=false              # Enable shell commands (DANGEROUS)
FILE_UPLOAD_ENABLED=true         # Allow file uploads
FILE_DOWNLOAD_ENABLED=true       # Allow file downloads
MAX_FILE_SIZE=10485760           # 10MB - Maximum file size
REQUEST_TIMEOUT=30000            # 30 seconds timeout for requests

# ===== PLUGIN SPECIFIC =====
# VCF Plugin
VCF_SAVE_DIR="./vcf_cards"
VCF_MAX_CARDS=50

# URL Plugin
URL_SHORTENER_SERVICE=tinyurl    # tinyurl, isgd, vgd
URL_EXPAND_ENABLED=true

# Play Plugin
PLAY_DEFAULT_QUALITY=high
PLAY_DEFAULT_FORMAT=mp3
PLAY_SEARCH_LIMIT=5

# AI Plugin
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_MODEL=gpt-3.5-turbo

# TTS Plugin
TTS_LANGUAGE=en                  # Language for text-to-speech
TTS_SPEED=1.0                    # Speech speed
TTS_VOICE=male                   # male, female

# ===== LOGGING =====
LOG_TO_FILE=true                 # Save logs to file
LOG_FILE_PATH="./logs/bot.log"
LOG_ROTATION=true                # Rotate log files
LOG_MAX_SIZE=10485760            # 10MB per log file
LOG_MAX_FILES=10                 # Keep 10 rotated files

